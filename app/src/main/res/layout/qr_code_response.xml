<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="300dp"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
            android:id="@+id/bookImg"
            android:src="@drawable/book_tmp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="100dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_height="160dp"/>

    <TextView
            android:id="@+id/title"
            app:layout_constraintTop_toBottomOf="@id/bookImg"
            android:text="You got"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/bookTilte"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Harry Potter and Borya Potter"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/close"
            app:layout_constraintTop_toBottomOf="@id/bookTilte"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_bg"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Close"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

</android.support.constraint.ConstraintLayout>