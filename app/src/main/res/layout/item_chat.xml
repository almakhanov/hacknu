<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatarUser"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"/>

    <TextView
            android:id="@+id/nameUser"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="@id/avatarUser"
            app:layout_constraintStart_toEndOf="@id/avatarUser"
            android:layout_marginStart="16dp"
            android:text="Askhat Telzhanov "
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/textRequest"
            app:layout_constraintTop_toTopOf="@id/nameUser"
            app:layout_constraintStart_toEndOf="@id/nameUser"
            android:text="is requesting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/bookName"
            app:layout_constraintTop_toBottomOf="@id/nameUser"
            app:layout_constraintStart_toStartOf="@id/nameUser"
            android:layout_marginTop="8dp"
            android:text="Harry potter and Borya Potter"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/bookImg"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:src="@drawable/book_tmp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="50dp"
            android:layout_height="64dp"/>

    <LinearLayout
            android:id="@+id/buttonLayout"
            app:layout_constraintTop_toBottomOf="@id/bookImg"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="36dp">

        <Button
                android:id="@+id/declineBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/decline_btn_bg"
                android:text="decline"
                android:paddingStart="16dp"
                android:drawableStart="@drawable/ic_close_black_24dp"
                android:layout_height="match_parent"/>

        <Button
                android:id="@+id/acceptBtn"
                android:text="Accept"
                android:background="@drawable/accept_btn_bg"
                android:layout_weight="1"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:paddingStart="16dp"
                android:drawableStart="@drawable/ic_check_black_24dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


    </LinearLayout>

    <View
            android:background="#DADADA"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

</android.support.constraint.ConstraintLayout>